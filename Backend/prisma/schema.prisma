generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  image     String?
  createdAt DateTime @default(now())
  role      String   @default("student")
  posts     Posts[]
  sentMessages     Messages[] @relation("MessageSender")
  receivedMessages Messages[] @relation("MessageReceiver")
  friendships       Friends[] @relation("FriendRequester")
  friendOf          Friends[] @relation("FriendRequested")
}


model Posts {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  image     String?
  createdAt DateTime @default(now())
  userId    Int
  user      Users    @relation(fields: [userId], references: [id])
}

model Messages {
  id         Int      @id @default(autoincrement())
  content    String
  createdAt  DateTime @default(now())
  userId     Int
  receiverId Int?
  user       Users    @relation(fields: [userId], references: [id], name: "MessageSender")
  receiver   Users?   @relation(fields: [receiverId], references: [id], name: "MessageReceiver") // <-- poner ?
}


model Friends {
  id       Int     @id @default(autoincrement())
  userId   Int
  friendId Int
  status   String  @default("pending") // pending, accepted, blocked
  user     Users   @relation(fields: [userId], references: [id], name: "FriendRequester")
  friend   Users   @relation(fields: [friendId], references: [id], name: "FriendRequested")
  @@unique([userId, friendId])
}
